{
  "compilerOptions": {
    "target": "ES2020",                  // cible ES2020 pour Node 14+ (ou plus r√©cent)
    "module": "ESNext",                  // modules ES pour Node.js natif (ESM)
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
